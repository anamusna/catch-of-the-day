/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background blue
  transition all .2s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background green
    transform translateX(0) 
    max-height 60px 0 !important
    padding 2rem 0 !important

.order-leave
  transition all .5s
  transform translateX(0)  
  &.order-leave-active
   transform translateX(120%)
   max-height 0
   padding 0 !important

.count-enter
transition all .5s
transform translateY(100%)
  &.count-enter-active
  transform translateY(0)

.count-leave
 transition all .25s
 transform translateY(0) 
 position absolute
 right 0
 bottom 0
 &.count-enter-active
  transition all .5s
  transform translateY(-100%) 
